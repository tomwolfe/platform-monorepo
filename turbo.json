{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ABLY_API_KEY", "UPSTASH_REDIS_REST_URL", "DATABASE_URL", "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY", "CLERK_SECRET_KEY", "INTERNAL_SYSTEM_KEY", "RESEND_API_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
